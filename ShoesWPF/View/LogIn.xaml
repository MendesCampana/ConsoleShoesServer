<Window x:Class="ShoesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesWPF"
        mc:Ignorable="d"
        Title="Log In" Height="400" Width="525" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#0ABAB5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="loginText" Grid.Row="0" Margin="100 30" FontSize="25" FontStyle="Italic" FontWeight="ExtraBold" VerticalContentAlignment="Center"></TextBox>
        <PasswordBox Name="passText" Grid.Row="1" Margin="100 30" FontSize="25" FontWeight="ExtraBold" VerticalContentAlignment="Center"></PasswordBox>
        <Button Grid.Row="2" Margin="60 30" Width="150" HorizontalAlignment="Center" Click="Button_Click">
            <TextBlock Text="Log In" FontSize="18" FontWeight="ExtraBold"></TextBlock>
        </Button>
    </Grid>
</Window>
